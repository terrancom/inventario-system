<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gesti√≥n de Ventas</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <% include ../partials/header %>

    <div class="container">
        <h2>Ventas Registradas</h2>
        <table>
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% sales.forEach(function(sale) { %>
                <tr>
                    <td><%= sale.product.name %></td>
                    <td><%= sale.quantity %></td>
                    <td><%= sale.date.toDateString() %></td>
                    <td>
                        <a href="/admin/sales/view/<%= sale._id %>">Ver Detalles</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <% include ../partials/footer %>
</body>
</html>